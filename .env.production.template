# Production Environment Variables Template
# Copy this to .env.production and fill in your production values

# Server Configuration
NODE_ENV=production
PORT=10000

# Client Configuration (update to your production client URL)
CLIENT_URL=https://your-client-app.onrender.com

# Database (MongoDB Atlas - production cluster recommended)
DATABASE_URL="mongodb+srv://username:password@cluster.mongodb.net/database?retryWrites=true&w=majority"

# Security
JWT_SECRET="your-super-secure-jwt-secret-key-for-production"

# ImageKit (production credentials)
IMAGEKIT_PUBLIC_KEY="your-production-imagekit-public-key"
IMAGEKIT_PRIVATE_KEY="your-production-imagekit-private-key"
IMAGEKIT_URL_ENDPOINT="your-production-imagekit-url-endpoint"

# Optional: Logging and Monitoring
LOG_LEVEL=info
SENTRY_DSN=""

# Optional: Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100
